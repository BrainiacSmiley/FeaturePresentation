<tr>
  <td class="round feature">
    <%= link_to feature_description.name, feature_description_path(feature_description) %><br />
    <% if signed_in? %>
    <nav class="round feature_links">
      <ul>
        <li><%= link_to t(:link_feature_description_edit), edit_feature_description_path(feature_description) %></li>
        <li><%= link_to t(:link_feature_description_delete), feature_description, :method => :delete, :confirm => t(:delete_question), :title => "Delete #{feature_description.name}" %></li>
      </ul>
    </nav>
    <% end %>
  </td>
</tr>
