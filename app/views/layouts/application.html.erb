<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <%= csrf_meta_tags %>
    <%= render 'layouts/stylesheets' %>
  </head>
  <body>
    <div class="container-fluid">
      <%= render 'layouts/header' %>
      <div class="sidebar" id="feaure_list">
        <div class="section round">
          <%= render 'feature_descriptions/feature_descriptions' %>
        </div>
      </div>
      <div class="content" id="feature_content">
        <div class="section round">
          <% flash.each do |key, value| %>
            <%= content_tag(:div, value, :class => "alert-message #{key}") %>
          <% end %>
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>

